{
  "info": {
    "_postman_id": "0a97d6f9-544f-4f3a-9546-31f2122059c9",
    "name": "V8Box Database API",
    "description": "Collection untuk endpoint database multi-database V8Box (admin area). Jalankan request login dulu jika sesi belum ada.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "0. Admin Login (Optional)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Host",
            "value": "{{admin_host_header}}"
          },
          {
            "key": "Content-Type",
            "value": "application/x-www-form-urlencoded"
          }
        ],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            {
              "key": "password",
              "value": "{{admin_password}}",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/admin/login",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "admin",
            "login"
          ]
        },
        "description": "Login admin untuk menyimpan cookie sesi di Postman cookie jar."
      }
    },
