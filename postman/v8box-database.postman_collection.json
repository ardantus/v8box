          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Host",
                "value": "{{admin_host_header}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/database/databases/{{database}}/tables/{{table}}/rows?limit=20&orderBy=id&order=DESC",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "admin",
                "database",
                "databases",
                "{{database}}",
                "tables",
                "{{table}}",
                "rows"
              ],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "orderBy",
                  "value": "id"
                },
                {
                  "key": "order",
                  "value": "DESC"
                }
              ]
            }
          }
        },
        {
          "name": "Read Row by ID",
          "request": {
            "method": "GET",
            "header": [
