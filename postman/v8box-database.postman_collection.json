    {
      "name": "4. Rows (Where-based)",
      "item": [
        {
          "name": "Search Rows by Where",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Host",
                "value": "{{admin_host_header}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"where\": \"status = ?\",\n  \"whereArgs\": [\"active\"],\n  \"limit\": 10,\n  \"offset\": 0,\n  \"orderBy\": \"id\",\n  \"order\": \"DESC\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/database/databases/{{database}}/tables/{{table}}/rows/search",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "admin",
