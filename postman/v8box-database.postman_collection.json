    {
      "name": "2. Tables",
      "item": [
        {
          "name": "List Tables",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Host",
                "value": "{{admin_host_header}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/database/databases/{{database}}/tables",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "admin",
                "database",
                "databases",
                "{{database}}",
                "tables"
              ]
            }
          }
        },
        {
          "name": "Create Table",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Host",
                "value": "{{admin_host_header}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tableName\": \"{{table}}\",\n  \"columns\": [\n    {\n      \"name\": \"id\",\n      \"type\": \"INTEGER\",\n      \"primaryKey\": true,\n      \"autoIncrement\": true\n    },\n    {\n      \"name\": \"name\",\n      \"type\": \"TEXT\",\n      \"nullable\": false\n    },\n    {\n      \"name\": \"email\",\n      \"type\": \"TEXT\",\n      \"unique\": true\n    },\n    {\n      \"name\": \"status\",\n      \"type\": \"TEXT\",\n      \"default\": \"active\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/database/databases/{{database}}/tables",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "admin",
                "database",
                "databases",
                "{{database}}",
                "tables"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "3. Rows (ID-based)",
      "item": [
        {
          "name": "Create Row",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Host",
                "value": "{{admin_host_header}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"data\": {\n    \"name\": \"Andi\",\n    \"email\": \"{{customer_email}}\",\n    \"status\": \"active\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/database/databases/{{database}}/tables/{{table}}/rows",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "admin",
                "database",
